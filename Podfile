  use_frameworks!

  shared

  target 'ParkKit-macOS Tests' do
    inherit! :search_paths
  end

end

target 'ParkKit-tvOS' do
  use_frameworks!

  shared

  target 'ParkKit-tvOS Tests' do
    inherit! :search_paths
  end

end

target 'ParkKit-watchOS' do
  use_frameworks!

  shared

end
